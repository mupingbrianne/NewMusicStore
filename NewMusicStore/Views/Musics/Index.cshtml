@model NewMusicStore.Models.MusicGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index">
    <p>
        <select asp-for="MusicGenre" asp-items="Model.Genre">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
               <input type="submit"   value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics[0].Singer)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Musics)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Genre.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Singer.Name)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
